@model Post
@{
    ViewData["Title"] = "Post";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Herman's Blog</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <script src="https://use.fontawesome.com/d1341f9b7a.js"></script>
</head>

<body>
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v4.0"></script>
    <br />
    <div class="card border-primary mb-12">
        <h2 class="card-header">@Model.Title</h2>
        <div class="card-body">
            <div>
                <a>Share to Facebook! &nbsp; &nbsp;</a>
                <a href="" class="card-link"><i class="fa fa-facebook-square fa-lg" aria-hidden="true"></i></a>
                <h4 class="text-right">@Model.Created.ToShortDateString()</h4>
                <br />
                <br />
            </div>
            <div class="post-body">
                @Html.Raw(Model.Body);
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="card border-primary bg-light mb-12">
        <h2 class="card-header">Comments</h2>
        <div class="card-body">
            <div class="fb-comments" data-href="https://developers.facebook.com/docs/plugins/comments#configurator" data-width="" data-numposts="10"></div>

        </div>
    </div>
</body>
</html>