@model Blog.ViewModels.PostViewModel
@{
    ViewData["Title"] = "Create Post";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Herman's Blog</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="~/lib/Trumbowyg-master/dist/ui/trumbowyg.min.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/d1341f9b7a.js"></script>
</head>
<body>
    <br />

    <div class="card border-primary mb-12">
        <h3 class="card-header">Post Editor</h3>
        <div class="card-body">

            <form asp-controller="Panel" asp-action="Edit" method="post" enctype="multipart/form-data">
                <input asp-for="Id" type="hidden" />
                <div class="form-group">
                    <label>Title</label>
                    <input asp-for="Title" />
                </div>
                <div>
                    <textarea id="editor" asp-for="Body"></textarea>
                </div>

                <div>
                    <label>Thumbnail Image</label>
                    <input asp-for="Image" />
                </div>
                <input type="submit" class="btn btn-primary active" value="Submit" />
            </form>
        </div>
    </div>



    @section scripts {
        <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="~/lib/Trumbowyg-master/dist/trumbowyg.min.js"></script>
        <script>
            $('#editor').trumbowyg();
        </script>
    }
</body>
</html>
