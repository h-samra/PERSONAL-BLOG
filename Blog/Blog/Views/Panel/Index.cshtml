@model IEnumerable<Post>
@{
    ViewData["Title"] = "Admin Panel";
}
<br />

<html>
<head>
    <meta charset="utf-8">
    <script src="https://use.fontawesome.com/d1341f9b7a.js"></script>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="card border-primary mb-6">
        <h3 class="card-header">Admin Pannel</h3>
        <div class="card-body">
            <table class="table table-hover">
                @foreach (var post in Model)
                {
                    <tbody>
                        <tr>
                            <th scope="row">
                                <a asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">
                                    @post.Title
                                </a>
                            </th>
                            <th scope="col">
                                <a asp-controller="Panel" asp-action="Edit" asp-route-id="@post.Id">
                                    <i class="fa fa-edit fa-lg" aria-hidden="true"></i>
                                </a>
                            </th>
                            <th scope="col">
                                <a asp-controller="Panel" asp-action="Remove" asp-route-id="@post.Id">
                                    <i class="fa fa-trash fa-lg" aria-hidden="true"></i>
                                </a>
                            </th>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</body>
</html>